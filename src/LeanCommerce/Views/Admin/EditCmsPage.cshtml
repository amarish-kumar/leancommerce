@using LeanCommerce.ViewModels.Admin
@model CmsPageViewModel

@{
    if (Model != null)
    {
        ViewData["Title"] = "Cms Page " + Model.PageName;
    }
    else
    {
        ViewData["Title"] = "Cms Page";
    }

}
<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewData["Title"] <small>Please enter your page information.</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form asp-controller="Admin" asp-action="EditCmsPage" method="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PageName" class="col-md-3 col-sm-3 col-xs-12 control-label"></label>
                        <div class="col-md-3">
                            <input asp-for="PageName" class="form-control" />
                            <span asp-validation-for="PageName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlName" class="col-md-3 col-sm-3 col-xs-12 control-label"></label>
                        <div class="col-md-3">
                            <input asp-for="UrlName" class="form-control" />
                            <span asp-validation-for="UrlName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PageContents" class="col-md-3 col-sm-3 col-xs-12 control-label"></label>
                        <div class="col-md-3">
                            <input asp-for="PageContents" class="form-control" />
                            <span asp-validation-for="PageContents" class="text-danger"></span>
                        </div>
                    </div>
                    <input asp-for="ObjectId" hidden="hidden" />
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
