@using LeanCommerce.Services.Catalog.Model
@using MongoDB.Driver
@using LeanCommerce.ViewComponents
@model IMongoCollection<Category>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Category Maintenance
                <small>
                    
                </small>
            </h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Categories</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="@Url.Action("NewCategory","Admin")">New</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @{ 
                        GridViewComponent.GridSettings gridSettings = new GridViewComponent.GridSettings()
                        {
                            EditViewName = "EditCategory"
                        };
                        gridSettings.Columns.Add(new GridViewComponent.GridSettings.GridColumnInfo() { FieldName = "Name", Sortable = true });
                        gridSettings.Columns.Add(new GridViewComponent.GridSettings.GridColumnInfo() { FieldName = "Active", Sortable = true });
                    }
                    @Component.Invoke("Grid", gridSettings, Model.AsQueryable<Category>())
                </div>
            </div>
        </div>

        <br>
        <br>
        <br>

    </div>
</div>